{
  "name": "genart-monorepo",
  "version": "0.1.0",
  "description": "Monorepo for creative coding and generative art projects",
  "scripts": {
    "dev": "nx run-many --target=dev --all",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "deploy:crude-collage-painter": "nx deploy crude-collage-painter",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:update": "playwright test --update-snapshots",
    "test:e2e:report": "playwright show-report",
    "test:verify": "node test/scripts/verify-utilities.js",
    "test:verify:basic": "node test/scripts/verify-utilities.js --basic",
    "test:verify:light": "node --max-old-space-size=2048 test/scripts/verify-utilities.js --basic",
    "test:debug": "node test/scripts/debug-test.js"
  },
  "devDependencies": {
    "@nx/eslint": "^21.6.4",
    "@nx/js": "^21.6.4",
    "@nx/playwright": "21.6.4",
    "@nx/vite": "^21.6.4",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.57.1",
    "eslint-plugin-p5js": "^1.0.0",
    "gh-pages": "^6.3.0",
    "nx": "^21.6.4",
    "standard": "^17.1.2",
    "vite": "^5.0.0"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "dependencies": {
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "p5": "^1.11.10",
    "p5js-wrapper": "^1.2.3",
    "tweakpane": "^4.0.5"
  }
}
